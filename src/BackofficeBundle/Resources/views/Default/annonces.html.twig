{% include "@Backoffice/Default/menu.html.twig" %}
{% block contenu %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Gestion des annonces
                <a href="{{ path('ajout_annonce') }}" class="btn btn-danger">Rédigez Votre annonce</a>
                <small></small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Gestion des annonces</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <!-- Small boxes (Stat box) -->
            <div class="row">

                <div class="box">
                    <div class="box-header">
                        <img style='width:90%' class="box-title" src='{{ asset ('bundles/backoffice/images/3etapes.png')}}'/>   
                    </div>
                    <!-- /.box-header -->

                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr id=''>
                                    <th>Num</th>
                                    <th>Type d'annonce</th>
                                    <th>Date de création</th>
                                    <th>Montant</th>
                                    <th>Info Publication</th>
                                    <th>Publié Par</th>
                                    <th>Actions</th>

                                </tr>
                            </thead>
                            <tbody>
                                {% set i=0 %}
                                {% for annonce in listeAnnonces %}
                                    {% set i=i+1%}
                                    <tr>
                                        <td>{{ i }}</td>
                                        <td>{% if(annonce.typeannonce=='Cloture')  %} {{ "Clôture" }} {% else %} {{ annonce.typeannonce }} {% endif %}</td>

                                        <td>{{ annonce.datepublication }}</td>
                                        <td>4.16 €</td>
                                        <td>
                                            <b style="color:red">Adresse: </b>{{ annonce.adresse }} {{ annonce.complementAdresse }}</br>
                                            <b style="color:red">Code Postal: </b>{{ annonce.codePostal }}</br>
                                            <b style="color:red">Ville: </b>{{ annonce.ville }}</br>
                                            <b style="color:red">Ville du Greffe: </b>{{ annonce.villeDuGreffe }}</br>
                                            <b style="color:red">Nom de la société: </b>{{ annonce.societe }}</br>
                                            <b style="color:red">Forme juridique de la société: </b>{{ annonce.formeJurique }}</br>
                                            <b style="color:red">Capital: </b>{{ annonce.capital }}</br>
                                            <b style="color:red">N° RCS: </b>{{ annonce.nrcs }}</br>
                                            <b style="color:red">Type d'assemblée: </b>{{ annonce.typeAssemblee }}</br>
                                            <b style="color:red">Autre type d'assemblée: </b>{{ annonce.typeAssemble2 }}</br>
                                            <b style="color:red">Date de l'assemblée: </b>{{ annonce.dateAssemblee }}</br>
                                            <b style="color:red">Date d'effet: </b>{{ annonce.dateEffet }}</br>
                                        </td>
                                        <td>{{ annonce.publierpar }}</td> 

                                        <td>
                                            <a href='{{path('edit_annonce', { 'id': annonce.id })}}' class="btn btn-info btn-xs btn-edit"><i class="fa fa-pencil"></i></a> 
                                            <a href="{{path('delete_annonce', { 'id': annonce.id })}}" id="{{annonce.id}}_{{ i }}" class="btn btn-danger btn-xs btn-delete" onclick="return confirm('Etes vous sur de vouloir supprimer cette Annonce ?');"><i class="fa fa-trash-o"></i></a>
                                            </br></br><a href="{{path('visualiser_annonce', { 'id': annonce.id })}}" id="" class="btn btn-success"><i class="fa fa-eye"></i> Visualisez Votre annonce</i></a>
                                        </td>

                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr id=''>
                                    <th>Num</th>
                                    <th>Type d'annonce</th>
                                    <th>Date de création</th>
                                    <th>Montant</th>
                                    <th>Info Publication</th>
                                    <th>Publié Par</th>
                                    <th>Actions</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <!-- /.box-body -->
                </div>


                <!-- ./col -->
            </div>
            <!-- /.row -->

            <!-- /.row (main row) -->

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->



</div>
<!-- ./wrapper -->
{% endblock %}
{% include "@Backoffice/Default/footer.html.twig" %}