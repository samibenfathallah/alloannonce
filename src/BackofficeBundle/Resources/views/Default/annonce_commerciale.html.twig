{% include "@Backoffice/Default/menu.html.twig" %}
{% block contenu %}
    <div class="content-wrapper">

        <section class="content-header">
           
           <h1>
                Gestion des annonces
                <a href="{{ path('ajout_annonce') }}" class="btn btn-danger">Retourner à la liste des types annonces</a>{% if app.request.query.get('add')=='1' %} <a class="btn btn-sm btn-success" href='#'>
                                    {{ "Annonce Ajouté" }} 
                                </a>{% endif  %}
                <small></small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Gestion des annonces</li>
            </ol>
        </section>
        <!-- Main content -->
        <section class="content">
            <!-- Small boxes (Stat box) -->
			<h1>Annonce Constitution de société commerciale</h1>
            <div class="row">

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">
						<img style="width:90%" class="box-title" src='{{ asset ('bundles/backoffice/images/2etape.png')}}'/>   
                            


                            </h3>
                        </div>
                        <!-- /.box-header -->

                        <div class="box-body">
                            <div class="modal-body">
                                <div  class="form-horizontal form-label-left">
								 <div class="form-group col-xs-12" style="background:#009ee0;color:#fff;padding-bottom:5px" >

                                        <label class="control-label  col-xs-12" style="font-size:20px;text-align: left" for="modal-name"> Siège social   </label>

                                    </div>
                                    {{ form_start(form) }}
                                     <div class="form-group col-xs-6">
                                        {{ form_label(form.adresse) }}
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            {{ form_widget(form.adresse) }}
                                        </div>
                                    </div>
                                    </br>   
                                     <div class="form-group col-xs-6">
                                        {{ form_label(form.cmplAdresse) }}
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            {{ form_widget(form.cmplAdresse) }}
                                        </div>
                                    </div>
                                    </br>   
                                     <div class="form-group col-xs-6">
                                        {{ form_label(form.codePostale) }}
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            {{ form_widget(form.codePostale) }}
                                        </div>
                                    </div>

                                     <div class="form-group col-xs-6">
                                        {{ form_label(form.ville) }}
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            {{ form_widget(form.ville) }}
                                        </div>
                                    </div>

                                     <div class="form-group col-xs-6">
                                        {{ form_label(form.villeGreffe) }}
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            {{ form_widget(form.villeGreffe) }}
                                        </div>
                                    </div>
									 <div class="form-group col-xs-12" style="background:#009ee0;color:#fff;padding-bottom:5px" >

                                        <label class="control-label col-xs-12" style="font-size:20px;text-align: left" for="modal-name"> Informations de la société  </label>

                                    </div>
									<!--------------------Partie Societe------------------------->
                                     <div class="form-group col-xs-6">
                                        {{ form_label(form.nomSct) }}
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            {{ form_widget(form.nomSct) }}
                                        </div>
                                    </div>

                                     <div class="form-group col-xs-6">
                                        {{ form_label(form.formJuridique) }}
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            {{ form_widget(form.formJuridique) }}
                                        </div>
                                    </div>
									
									 <div class="form-group col-xs-6">
                                        {{ form_label(form.date_signature_state) }}
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            {{ form_widget(form.date_signature_state) }}
                                        </div>
                                    </div>
									
									<div class="form-group col-xs-6">
                                        {{ form_label(form.sigle) }}
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            {{ form_widget(form.sigle) }}
                                        </div>
                                    </div>
									
									<br style="clear: both">

                                     <div class="form-group col-xs-6">
                                        {{ form_label(form.nomCommercial) }}
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            {{ form_widget(form.nomCommercial) }}
                                        </div>
                                    </div>


                                     <div class="form-group col-xs-6">
                                        {{ form_label(form.enseigne) }}
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            {{ form_widget(form.enseigne) }}
                                        </div>
                                    </div>
									
									<br style="clear: both">
									
                                     <div class="form-group col-xs-6">
                                        {{ form_label(form.duree) }}
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            {{ form_widget(form.duree) }}
                                        </div>
                                    </div>

                                     <div class="form-group col-xs-6">
                                        {{ form_label(form.capital) }}
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            {{ form_widget(form.capital) }}
                                        </div>
                                    </div>
                                        
                                    
                                        
                                     <div class="form-group col-xs-6">
                                        {{ form_label(form.activitePrincipale) }}
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            {{ form_widget(form.activitePrincipale) }}
                                        </div>
                                    </div>

									<br style="clear: both">
									
									<div class="form-group col-xs-12" style="background:#009ee0;color:#fff;padding-bottom:5px" >

                                        <label class="control-label col-xs-12" style="font-size:20px;text-align: left" for="modal-name"> Gérant  </label>

                                    </div>
									<div class="form-group col-xs-6">
                                        <label class="control-label col-md-4 col-sm-3 col-xs-12" for="modal-name"> Personne physique / Société <span class="required"></span>
                                        </label>
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                             <select name='typegerant' id='typegerant' class='form-control col-md-7 col-xs-12'>
												 <option value=''>- Sélectionner une valeur - </option>
												 <option value='1'>- Personne physique - </option>
												 <option value='2'>- Société - </option>
											 </select>
                                        </div>
                                    </div>
									<br style="clear: both">
									<div id='personne' style='display:none'>
									
									</div>
									
									
									<div id='societe' style='display:none'>
									
									
									</div>
									
									
                                    <div class="modal-footer col-xs-12">
                                        {{ form_widget(form.save) }}

                                    </div>
                                    {{ form_end(form) }}                          
                                </div>
                            </div>

                        </div>

                        <!-- /.box-body -->
                    </div>


                    <!-- ./col -->
                </div>
                <!-- /.row -->

                <!-- /.row (main row) -->

            </section>
        </div>
		
