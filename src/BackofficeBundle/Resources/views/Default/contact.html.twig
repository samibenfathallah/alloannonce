{% include "@Backoffice/Default/menu.html.twig" %}
{% block contenu %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Gestion des Informations de contact (Email,Tél et adresse)
                
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Gestion des Informations de contact</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <!-- Small boxes (Stat box) -->
            <div class="row">

                <div class="box">
                    
                    <!-- /.box-header -->

                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr id=''>
                                    <th>Email</th>
                                    <th>Tél</th>
                                    <th>Adresse</th>
                                    <th>Actions</th>

                                </tr>
                            </thead>
                            <tbody>
                                {% set i=0 %}
                                {% for info in infos %}
                                    {% set i=i+1%}
                                    <tr>
                                       
                                        

                                        <td>{{ info.email }}</td>
                                        
                                        <td>{{ info.tel }}</td>
                                        <td>{{ info.adresse }}</td>
                                        

                                        <td>
                                            <a href='{{path('edit_contact', { 'id': info.id })}}' class="btn btn-info btn-xs btn-edit"><i class="fa fa-pencil"></i></a> 
                                           
                                        </td>

                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Email</th>
                                    <th>Tél</th>
                                    <th>Adresse</th>
                                    <th>Actions</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <!-- /.box-body -->
                </div>


                <!-- ./col -->
            </div>
            <!-- /.row -->

            <!-- /.row (main row) -->

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->



</div>
<!-- ./wrapper -->
{% endblock %}
{% include "@Backoffice/Default/footer.html.twig" %}